<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head")%>

<body>
    <%- include("./partials/header") %>
    <main>
        <section class="contato">
            <div class="container">
                <h1>Cadastro de Usuario</h1>

                <div class="align-row">
                    <div class="lista-erros"></div>
                    <form method="POST" onsubmit="validaCadastro(event)" novalidate>

                        <div class="form-group" id="estilo-form">
                            
                            <div class="lista-erros">
                            <form class="form-cadastro" method="POST" >
                            <div id="logo">
                                <img src="img/logo.png" alt="">
                            </div>
                
                            
                
                            </div>
                            <div class="form-group">
                                <label for="nome">Nome</label>
                                <input type="text" class="form-control" name="Nome" placeholder="Digite o seu nome" data-required>
                                
                                <label for="email">email</label>
                                <input type="email" name="email" class="form-control" placeholder="Digite seu email" data-required>

                            </div>
                
                            <div class="form-group">
                                <div class="form-group">
                                    <label for="cep">CEP</label>
                                    <input type="text" id="cep" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="endereco">Endereço</label>
                                    <input type="text" id="endereco" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="numero">Número</label>
                                    <input type="text" id="numero" class="form-control" required>
                                </div>
                            <!-- </div> -->
                            <!-- <div class="row"> -->
                                <div class="form-group">
                                    <label for="bairro">Bairro</label>
                                    <input type="text" id="bairro" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="cidade">Cidade</label>
                                    <input type="text" id="cidade" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="estado">Estado</label>
                                    <input type="text" id="estado" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="senha">Senha</label>
                                <input type="password" name="senha" class="form-control" placeholder="Senha" >
                    
                                <label for="repeatPassword">Repita a senha</label>
                                <input type="password" name="repeatPassword" class="form-control" placeholder="Repita a senha">

                                
                            </div>
                        
                            
                            <hr>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Veja a senha</label>
                            </div>
                            
                        </main>
                        <button type="submit" id="botao-usuario" class="btn btn-primary">ENVIAR</button>
                        </form>
                    </div>
            </div>
        </section>
    </main>
    <%- include("./partials/footer") %>
</body>

<script src="/js/validacao.js"></script>
<script src="/js/cadastro.js"></script>
<script src="/js/apiCep.js"></script>

</html>