<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0;maximum-scale=1.0">
    <title>Pagina Inicial</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/icone.css">
  </head>
  <body>

    <%- include("./partials/header")%>
    <div class="img-fluid">
      <img src="imagens/DiaryHeroArticle_ForeverGuilty-Campaign-Jared_001_Default.jpg" class="img-fluid-banner" alt="...">
    </div>


  <main>
    <section>
      <section class="produtos">
        <div class="container-fluid w-100 p-0 bg-dark d-flex justify-content-center" style="height:100px; border-radius: 0px 0px 10px 10px;">
          <div class="w-100 p-3">
            <ul class="ul-categorias">  
              <% categoria.forEach(function(categorias){ %> 
                <li >
                  <div class="categoria-bar">
                    <img style="width: 55px; border: solid #eee; border-radius: 41px;" 
                         src="/uploads/<%= categorias.imagem %> " alt="">
                    
                        <p><%= categorias.nome %> </p>
                  </div>
                  
                </li>
              <% }) %> 
            </ul>
          </div>
        </div>
        <div id="section-produtos" class="container">
            <div class="items">

              

              
              <% produtos.forEach(function(produto) { %>
                <a style="text-decoration: none ; color:black ;" href="/produtos/<%= produto.id %>"><article>
                  <div class="thumb">
                    <img id="produto1" src="/uploads/<%= produto.imagem %>" alt="">
                   </div>
                  
                   <div class="descricao">
 
                     <h5 style="font-style: oblique;"><%= produto.nome %></h5>
                     <div class="valor">
                       <h5>R$ <%= produto.valor %></h5 >
                     </div>
                     
                   </div>
 
                                 
                    <div class="valores">
                     
                     <div class="icone-compra">
                       <a style="text-decoration:none ;" href=""><span style="text-decoration:none ;" class="material-icons">    add_shopping_cart    </span></a>
                     </div>   
 
                   </div>
                  
                   
                 </article> </a>

                <% }) %>
            </div>
        </div>
    </section>
  </main>
    
    <%- include("./partials/footer")%>
  </body>
  
</html>
